# MongoDB Atlas Connection String
# Get this from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority

# SendGrid API Key for sending emails
# Get this from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_api_key_here

# Verified sender email address in SendGrid
FROM_EMAIL=noreply@yourdomain.com

# Base URL (only needed for local development)
# In production, Vercel sets this automatically
BASE_URL=http://localhost:3000
